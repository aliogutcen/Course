public class Main {

	
	public static void dosyaOku() {
		
		
		try(Scanner sc = new Scanner(new FileReader("dosya1.txt"))){
			
			
			while(sc.hasNextLine()) {
				
				String okunan = sc.nextLine();
				
				String[] arr = okunan.split(",");
				
				System.out.println("0.index uzunluÄŸu= "+arr[0].length()+" 1.index uzunlugu= "+arr[1].length()+" 2.index uzunlugu= "+arr[2].length());
			}
			
			
			
		} catch (FileNotFoundException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		
	}
	
	
	
	
	public static void main(String[] args) {

	try(FileWriter fw = new FileWriter("dosya1.txt")){
		
		fw.write("Ali Ogutcen,43151,215");
		
		
		
		
		
		
	} catch (IOException e) {
		// TODO Auto-generated catch block
		e.printStackTrace();
	}
		dosyaOku();
	}

}
